                        <th>เกรดปวส.</th>
                        <th>ลบ</th>

                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>

                                @Model[i].TransReCode

                            </td>
                            <td>@Model[i].UserName</td>
                            <td>  @Model[i].CodeCoursetrans : @Model[i].Namethaics</td>
                            <td>

                                @Html.HiddenFor(x => x[i].Id)
                                @Html.HiddenFor(x => x[i].TransReCode)
                                @Html.HiddenFor(x => x[i].CodeSubtrans)
                                @Html.TextBoxFor(modelItem => modelItem[i].GradeTra)

                            </td>
                            <td>
                                @Html.CheckBoxFor(x => x[i].IsHide)
                            </td>
                        </tr>
                    }

                    @* @foreach (var DataUser in Model)
